@model RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section ExtraCss {
    <!-- Ajoutez ici des CSS spécifiques si nécessaire -->
}

@if (!ViewData.ModelState.IsValid)
{
<div class="alert alert-danger">
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
    <p>@error.ErrorMessage</p>
        }
</div>
}

@if (TempData["Success"] != null)
{
<div class="alert alert-success">
    <p>@TempData["Success"]</p>
</div>
}


<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="text-center mb-0">Inscription</h3>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-success"></span>
                    </div>
                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="IsRecruiter" class="form-check-input" />
                            <label asp-for="IsRecruiter" class="form-check-label"></label>
                        </div>
                        <span asp-validation-for="IsRecruiter" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-user-plus"></i> S'inscrire
                        </button>
                    </div>
                </form>
                <div class="text-center mt-3">
                    <p>Déjà un compte? <a asp-action="Login" class="text-primary">Se connecter</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
